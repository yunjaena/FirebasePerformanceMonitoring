<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text = "TRACE START"
            android:id ="@+id/main_actvity_trace_start_button"
            />

    <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="TRACE END"
            android:id="@+id/main_actvity_trace_end_button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/main_actvity_trace_start_button"/>
</android.support.constraint.ConstraintLayout>